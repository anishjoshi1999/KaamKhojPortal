<%- include('./partials/header.ejs')  %>
<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">KaamKhoj</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/api/jobs">HamroBazzar</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/api/upload">Upload Information</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/api/view">View Profile</a>
          </li>
        </ul>
        <% if (userAuthenticated) { %>
          <!-- Show logout button if user is authenticated -->
          <a href="/logout" class="btn btn-outline-danger">Logout</a>
        <% } %>
         
      </div>
    </div>
  </nav>
  
<div style="margin-top: 80px;">
    <div class="vh-100">
        <h2 class="text-center">Total Records: <%=jobsData.length%></h2>
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Job Name</th>
                    <th scope="col">Salary</th>
                    <th scope="col">Job Description</th>
                    <th scope="col">Job Seeker / Provider</th>
                    <th scope="col">Contact Number</th>
                    <th scope="col">Location</th>
                    <th scope="col">Created Time</th>
                </tr>
            </thead>
            <tbody>
                <% if (Array.isArray(jobsData) && jobsData.length > 0) { %>
                    <% jobsData.forEach((job) => { %>
                        <tr>
                            <td><%= job.name %></td>
                            <td><%= job.salary %></td>
                            <td><%= job.description %></td>
                            <td><%= job.role %></td>
                            <td><%= job.contactNumber %></td>
                            <td><%= job.location %></td>
                            <td><%= job.createdTime.toLocaleString() %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="7" class="text-center">No data available</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
<%- include('./partials/footer.ejs')  %>